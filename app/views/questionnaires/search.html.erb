<%= render 'shared/navbar' %>
<div class="container mt-3">
<% if @quest_stu.present?  %>
<div class="search">
<h2>Let's go!</h2>
</div>
<section class="card-section mt-2">
      <div class="card-area">
      <div class="row">
                 <div class="cardttt mb-5">
            <div class="flip-card">
                <div class="flip-card__container">
                  <div class="card-front">
                    <div class="card-front__tp card-front__tp--quiz">
                      <h2 class="card-front__heading">
                        <%=@quest_stu.name%>
                      </h2>
                    </div>
                      <div class="card-front__bt">
                        <p class="card-front__text-view card-front__text-view--quiz">
                        View me
                        </p>
                      </div>
                    </div>
                    <div class="card-back">
                    </div>
                </div>
              </div>
              <div class="inside-page">
                <div class="inside-page__container">
                  <h3 class="inside-page1__text">
                      <p><%= link_to 'Go', @quest_stu, class: "btn mt-3" %></p>
                      </h3>
                  </div>
              </div>
            </div>
</div>
</section>
<%else%>
<div class="container_token">
<h3>You need a token to start a test!</h3>
</div>
<div class="container_back1">
<%= link_to 'Back', questionnaires_path, class: "btn btn-outline-secondary mt-1" %>
</div>
<%end%>
</div>
